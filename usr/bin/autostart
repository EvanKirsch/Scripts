#!/bin/bash

feh --bg-fill ~/Pictures/bg/bg.jpg &
compton &
alacritty &
nm-applet &
firefox &
spotify &

sleep 2
i3-msg '[class="Firefox-esr"] move to workspace 3 🌏'
i3-msg '[class="Spotify"] move to workspace 4 ♫'

sleep .5
i3-msg '[class="alacritty"] move to workspace 1 ≥'

while ["$(hostname -I)" = ""]; do
    sleep 1
done

steam &

sleep 8
i3-msg '[class="Steam"] move to workspace 2 💻'
